  body
    ul(class = "head")
      li(class = "headBlocks" id = "searchBlock") 
        input(type="text" id="searchBar") 
        div(type="button", id="searchButton")
          img(src= host+ "/resources/icons/search.png" id = "searchIcon")
           
      li(class = "headBlocks" id = "products" )
         a(href= host+ "/") Products
      li(class = "headBlocks" id = "signIn") 
         a(href= host+ "/user/signin") Sign In
      li(class = "headBlocks" id = "register") 
         a(href= host+ "/user/signup") Register
